@model IEnumerable<WebApplication1.Models.person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<h2>Index</h2>


<body class="Website_body">
    <section id="peopleIndex" class="section-p1">
        <h2 style="text-align: center;">Users details</h2>

        <div class="pro-container">
            <table class="table white-text-table" >
                <tr class="nice-label">
                    <th>
                        @Html.DisplayNameFor(model => model.person_Fname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_Lname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_dob)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_phoneNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.person_role)
                    </th>
                    <th></th>
                </tr>
                </br>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center;">
                        <td>
                            @Html.DisplayFor(modelItem => item.person_Fname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_Lname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_dob).ToString().Substring(0,10)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_phoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.person_role)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.person_id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.person_id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.person_id })
                        </td>
                    </tr>
                }
            </table>
            </div>
        </section>
</body>