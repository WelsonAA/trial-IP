@model WebApplication1.Models.feedback

@{
    ViewBag.Title = "Edit_feedback";

}

<body class="Website_body">
    <h2 style="text-align:center">Edit_feedback</h2>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <br />
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.feedback_id)


            <br />
            <div class="form-group" style="text-align:center">
                <h3>Your previous feedback description </h3>
                <div class="col-md-10" style="text-align:center">
                    @Html.TextAreaFor(model => model.feedback_desc, new { @class = "form-control", rows = 4, cols = 40 })
                    @Html.ValidationMessageFor(model => model.feedback_desc, "", new { @class = "text-danger" })
                </div>

            </div>

            <br />
            <br />

            <div class="form-group" style="text-align:center">
                <div class="col-md-offset-2 col-md-10" style="text-align:center">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>

            <br />
        </div>
    }

  


</body>