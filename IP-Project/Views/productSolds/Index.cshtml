@model IEnumerable<WebApplication1.Models.productSold>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .Website_body {
        margin: 20px;
    }

    .table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #dc3545; /* Red background for heading */
            color: #fff; /* White text color for heading */
        }

        .table tr:hover {
            background-color: #e0e0e0; /* Hover row color */
        }

    .details-button {
        background-color: #007bff; /* Blue button color */
        color: #fff; /* White text color */
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        border-radius: 4px;
    }
</style>

<h2 class="text-center">Product Sold</h2>

<body class="Website_body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.product_brand_name)
            </th>
            <th>
                Details
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.product_brand_name)
                </td>
                <td>
                    <a href="@Url.Action("Details", "productSolds", new { id = item.product_id })" class="details-button">Details</a>
                </td>
            </tr>
        }
    </table>
</body>
