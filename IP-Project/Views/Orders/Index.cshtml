@model IEnumerable<WebApplication1.Models.Order>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .Website_body {
        margin: 20px;
    }

    .table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #dc3545; /* Red background for heading */
            color: #fff; /* White text color for heading */
        }

        .table tr:hover {
            background-color: #e0e0e0; /* Hover row color */
        }

    .details-button {
        background-color: #007bff; /* Blue button color */
        color: #fff; /* White text color */
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        border-radius: 4px;
    }
</style>


<body class="Website_body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Method)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.person_Fname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Order_Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Total_Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Payment_Method)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.person.person_Fname)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Order_ID })
    </td>
</tr>}

    </table>
    >
</body>